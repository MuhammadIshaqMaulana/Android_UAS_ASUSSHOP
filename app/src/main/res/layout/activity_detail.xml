<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="12dp"
    tools:context="com.ishaq.AsusIshaq2125250060.Activity.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Laptop"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="35dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga Laptop"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="35dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_foto"
                android:layout_width="370dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/a1asus_vivobook_pro_15x_oled_k6501"/>

            <TextView
                android:id="@+id/tv_spek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ASUS Vivobook Pro 15X OLED adalah laptop yang
            bagus untuk meningkatkan kreativitas Anda. Kelebihan laptop
            ASUS terbaru 2023 ini adalah ditenagai prosesor Intel Core
            seri H generasi ke-12 dan VGA NVIDIA GeForce RTX 3060 GPU.
            Layar OLED NanoEdge 15.6 inci dengan resolusi 2.8K dan Refresh
            Rate 120Hz akan memanjakan mata Anda saat bekerja lama. doisajkfdshnfjieshuiferhfuer
            njujfewnhjenhkkjmnfjjsdofjsofjewjlfkjsiudshuidhdsnidfhewyuhfbeswhjfbeswhfnheswf"

                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="normal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="27sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_tambah"
                android:drawableRight="@drawable/ic_tambah"
                android:layout_marginHorizontal="1dp"
                android:backgroundTint="@color/purple_200"

                android:text="Beli" />

        </LinearLayout>
    </ScrollView>

